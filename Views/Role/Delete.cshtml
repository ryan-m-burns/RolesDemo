@model RolesDemo.ViewModels.RoleVM

@{
  ViewData["Title"] = "Delete Role";
}

<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-danger text-white">
      <h2><i class="fas fa-trash"></i> Delete Role</h2>
    </div>
    <div class="card-body">
      @if (!string.IsNullOrEmpty(ViewBag.Message))
      {
        <div class="alert alert-danger">
          <i class="fas fa-exclamation-circle"></i>
          <strong>Message:</strong>
          <p class="mb-0 mt-2">@ViewBag.Message</p>
        </div>
      }
      else
      {
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle"></i>
          <strong>Warning:</strong> Are you sure you want to delete this role?
          <p class="mb-0 mt-2">This action cannot be undone.</p>
        </div>
      }

      <div class="row mt-4">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-4">Role ID</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">Role Name</dt>
            <dd class="col-sm-8">@Model.RoleName</dd>
          </dl>
        </div>
      </div>

      <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-2">
          <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
          </a>
          @if (string.IsNullOrEmpty(ViewBag.Message))
          {
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-trash"></i> Delete Role
            </button>
          }
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}